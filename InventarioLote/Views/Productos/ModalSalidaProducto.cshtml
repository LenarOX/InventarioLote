

@{
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="ModalSalidaProducto" tabindex="-1" role="dialog" aria-labelledby="modalIngresarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-dark" id="exampleModalLongTitle">COMPRAR PRODUCTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid border rounded border-dark p-2" style="background-color:#efeeee">
                    <div class="container-fluid col-md-10">
                        <div class="form-group">
                            <b class="text-dark">Nombre Producto </b><p class="d-inline" id="modalCPProducto">X</p>
                        </div>
                        <div class="form-group">
                            <b class="text-dark">Codigo Producto </b><p class="d-inline" id="modalCPProductoId">X</p>
                        </div>
                    </div>
                    <div class="container-fluid col-md-10 border rounded bg-secondary">
                        <div class="form-group">
                            <b class="text-white">Codigo Lote</b>
                            <div class="col-md-12 d-flex">
                                <select class="form-control" id="modalCPSLCLote" name="modalCPSLCLote" required="required">
                                </select>
                            </div>
                            <b class="text-white">Precio</b>
                            <div class="col-md-12 d-flex">
                                <input class="form-control" id="modalCPPrecio" name="modalCPPrecio" required="required" disabled>
                            </div>
                            <b class="text-white">Cantidad Restante</b>
                            <div class="col-md-12 d-flex">
                                <input class="form-control" id="modalCPCRestante" name="modalCPCRestante" required="required" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <b class="text-white">Cantidad</b>
                            <div class="col-md-12 d-flex">
                                
                                <input class="form-control text-box single-line" data-val="true" data-val-number="The field Cantidad must be a number." data-val-required="El campo Cantidad es obligatorio." id="modalCPCantidad" name="modalCPCantidad" type="number" value="" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <b class="text-white">Total</b>
                            <div class="col-md-12 d-flex">
                                
                                <input class="form-control" id="modalCPTotal" name="modalCPTotal" required="required" disabled>
                            </div>
                        </div>
</div>
                                    </div>
                <div>
                    <p id="modalEnviarCorreoMessage" class="text-danger "></p>
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
                    <button id="modalBtnAceptar" type="button" class="btn btn-primary">ACEPTAR</button>
                </div>
                
            </div>
        </div>
    </div>
</div>